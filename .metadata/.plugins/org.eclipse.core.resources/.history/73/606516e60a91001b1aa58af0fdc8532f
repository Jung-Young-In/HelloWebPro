	<script type="text/javascript">
		$(document).ready(function() {
			$("#btnFadeIn").click(function() {
				$("p").slideDown();
			});
			
			$("#btnFadeOut").click(function() {
				$("p").slideUp();
			});
			
			$("#btnFadeToggle").click(function() {
				$("div").slideToggle();
			});
		});
	</script>
	
