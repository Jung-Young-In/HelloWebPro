		$(document).ready(function() {
			$("#btnSet").click(function() {
				var str = $("#img1").attr("src");
				//"../../images/simson1.jpg"
				var arr = str.split("/"); 
				// ["..", "..", "images", "flowers.jpg"]
				var fileName = arr[arr.length-1];
				// "simson1.jpg"
				
				$("#img1").attr("title", fileName);
			});
		});
	</script>
