	<script type="text/javascript">
		$(document).ready(function() {
			$("#result").click(function() {
			
			var check = [];
			
			$('input[type="checkbox"]:checked').each(function(e) {
				if(e != 0){
					check += ',';
				}
				check += $(this).val();
			});
			});
		});
	</script>
