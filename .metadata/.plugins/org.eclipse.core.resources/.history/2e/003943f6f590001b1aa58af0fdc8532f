			$("button").click(function(e) {
				$(this).css("border", "2px dotted red");
				e.stopPropagation();
			});
			
			$("span").click(function(e) {
				$(this).css("border", "2px solid green");
				e.stopPropagation();
			});
			var str = "HELLO";
			$("div").click(function(e) {
				$(this).css("border", "2px solid blue");
				$("div").html(str);
				e.stopPropagation();
			});
			var today = new Date();
			var year = today.getFullYear();
			$("a").click(function(e) {
				var age = prompt("태어난 연도를 입력하세요.(4자리 숫자 입력)");
				if((year - age) < 20){
					e.preventDefault();
					alert("20세 이상만 구글로 이동 가능합니다.");
				}
			});
		});
	</script>
