	<script type="text/javascript">
	$(document).ready(function() {
		$("img").css("width", "200px").css("height", "200px");
		var orgSrc;
		$("img").on({
			mouseover: function(e) {
				orgSrc = e.target.src
				e.target.src = "../../images/simson1.jpg"
			}
			, mouseout: function(e) {
				e.target.src = orgSrc;
			}
		});
		var imgs = $("img");
		var cnt = 0;
		$("img").on({
			dblclick: function(e) {
				$(this).css("display", "none");
				$("button").hide("slow");
			}
		, $("img").each(function(idx, item) {
			if(item.style.display == "none") cnt++;
		});
		if(cnt == imgs.legth)
			
		});
		}
		});
	});
	</script>
